<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewInfoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/color_border"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textAlignment="center"
                android:textColor="@color/greenApp"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_photo" />

            <EditText
                android:id="@+id/nameProduct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/color_border"
                android:gravity="center_vertical"
                android:hint="Nombre del Producto"
                android:padding="16dp"
                android:textColor="@color/greenApp" />

            <EditText
                android:id="@+id/descriptionProduct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/color_border"
                android:gravity="center_vertical"
                android:hint="Descripcion del Producto"
                android:padding="16dp"
                android:textColor="@color/greenApp" />

            <EditText
                android:id="@+id/Categoryproduct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/color_border"
                android:gravity="center_vertical"
                android:hint="Categoria del Producto"
                android:padding="16dp"
                android:textColor="@color/greenApp" />

            <Button
                android:id="@+id/Guardar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Guardar"
                android:textSize="18sp"
                app:cornerRadius="20dp"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>